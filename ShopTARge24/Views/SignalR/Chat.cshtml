<div class="container mt-3">
    <h3>Chat Room</h3>

    <div class="mb-3">
        <input type="text" id="userInput" placeholder="Your name" class="form-control mb-1" />
        <input type="text" id="messageInput" placeholder="Type a message..." class="form-control" />
        <button id="sendButton" class="btn btn-primary mt-2">Send</button>
    </div>

    <ul id="messagesList" class="list-group"></ul>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.7/signalr.min.js"></script>
    <script src="~/js/ClientSide.js"></script>
}
